{
  "name": "write-for-humans-ais",
  "version": "0.1.0",
  "description": "Publishing layer that generates AI-canonical artifacts from local HTML/Markdown.",
  "type": "module",
  "bin": {
    "wfha": "build/cli/index.js"
  },
  "scripts": {
    "dev": "tsx src/cli/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "wfha": "node build/cli/index.js",
    "test": "node --test tests/**/*.test.js",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "check": "npm run lint && npm run typecheck && npm run build && npm run test",
    "release": "npm run build"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "github-slugger": "^2.0.0",
    "mdast-util-to-string": "^4.0.0",
    "mdast-util-to-markdown": "^2.1.0",
    "rehype-parse": "^9.0.1",
    "rehype-remark": "^10.0.0",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "vfile": "^6.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@types/hast": "^3.0.4",
    "@types/mdast": "^4.0.4",
    "@types/node": "^22.10.0",
    "eslint": "^9.12.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2"
  }
}
